---
# Title == empty, so it not even will appear in the site's map list
title : 
---
<?xml version="1.0" encoding="utf-8"?>
  <feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ site.title }}</title>
    <icon>{{ site.url | remove:'index.html' }}/favicon.ico</icon>
    <link href="{{ site.url }}{{ page.url | remove:'index.html' }}" rel="self"/>
    <link href="{{ site.url | remove:'index.html' }}"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ site.url | remove:'index.html' }}</id>
    <author>
      <name>{{ site.author.name }}</name>
      <email>{{ site.author.email }}</email>
    </author>
    {% for post in site.posts limit:10 %}
      {% unless post.alias %}
        <entry>
          <title>{{ post.title }}</title>
          <link href="{{ site.url | remove:'index.html' }}{{ post.url | remove:'index.html' }}"/>
          <updated>{{ post.date | date_to_xmlschema }}</updated>
          <id>{{ site.url | remove:'index.html' }}{{ post.url | remove:'index.html' }}</id>
          <content type="html">{{ post.content | xml_escape }}</content>
        </entry>
      {% endunless %}
    {% endfor %}
  </feed>